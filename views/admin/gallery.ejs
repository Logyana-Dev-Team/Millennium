        <div
          class="card"
          data-toggle="dragula"
          data-containers='["card-list-1", "card-list-2", "card-list-3"]'
        >
          <% if(errorMsg !=null && errorMsg.length>0) {%>
          <div id="flash-msg" class="alert alert-danger"><%=errorMsg %></div>
          <%}%>
          <div
            style="
              text-align: center;
              color: #c28562 !important ;
              margin-top: 35px;
            "
          >
            <p style="color: #363435; font-size: 20px">
              Edit the gallery page images and text from below
            </p>
          </div>
          <!-- Omnisearch -->
          <div style="margin: 0 auto; width: 90%">
            <form
              action="/editGallery"
              method="POST"
              enctype="multipart/form-data"
            >
              <label for="banner1" class="inputLabel"
                >Add Image for Gallery</label
              >
              <div class="cz-file-drop-area form-group" id="banner1">
                <input
                  type="file"
                  name="image"
                  id="file-1"
                  class="custom-input-file"
                  data-multiple-caption="{count} files selected"
                  multiple
                  required
                />
                <label for="file-1">
                  <i class="fa fa-upload"></i>
                  <span>Choose a file…</span>
                </label>
                <small class="form-text text-muted"
                  >Image resolution should be
                  <span style="font-weight: bold; color: #6e00ff"
                    >1300px x 750px</span
                  >
                  for better resolution.</small
                >
              </div>

              <div class="form-group pb-2">
                <label class="inputLabel" for="Section1Text"
                  >Text to appear below image:</label
                >
                <input
                  class="form-control"
                  type="text"
                  id="Section1Text"
                  name="text"
                /><small class="form-text text-muted"
                  >Maximum 100 characters. No HTML or emoji allowed.</small
                >
              </div>
              <button class="btn btn-primary btn-block" type="submit">
                <i class="czi-cloud-upload font-size-lg mr-2"></i>Upload image
                to gallery
              </button>
            </form>

            <div class="row" style="margin-top: 75px">
              <% gallery.forEach(gallery => { %>
              <div class="col-4">
                <div class="card">
                  <img
                    class="card-img-top"
                    src="assets/img/uploads/<%= gallery.image %>"
                    alt="Card image cap"
                    class="img-fluid"
                  />
                  <div class="card-body">
                    <form
                      action="/editGalleryImageText/<%= gallery.id %>"
                      class="form-group"
                      method="POST"
                      style="text-align: center"
                    >
                      <input
                        type="text"
                        name="text"
                        class="form-control"
                        value="<%= gallery.text %>"
                      />
                      <button
                        type="submit"
                        class="btn btn-primary btn-icon-label"
                        style="padding: 5px; margin: 15px"
                      >
                        <span class="btn-inner--text">Update Text</span
                        ><span class="btn-inner--icon">
                          <i class="fas fa-plus"></i>
                        </span>
                      </button>
                      <button
                        type="button"
                        class="btn btn-danger btn-icon-label"
                        style="padding: 5px; margin: 15px"
                        onclick="deleteImage('<%= gallery.id %>')"
                      >
                        <span class="btn-inner--text">Delete Image</span
                        ><span class="btn-inner--icon">
                          <i class="far fa-trash-alt"></i>
                        </span>
                      </button>
                    </form>
                  </div>
                </div>
              </div>
              <%}); %>
            </div>
            <div
              aria-live="polite"
              aria-atomic="true"
              class="d-flex justify-content-center align-items-center"
              style="min-height: 200px"
            >
              <div
                class="toast"
                id="imageDeleted"
                role="alert"
                aria-live="assertive"
                aria-atomic="true"
              >
                <div class="toast-header">
                  <strong class="mr-auto" style="color: red"
                    ><i class="fas fa-check"></i>&nbsp;Deleted</strong
                  >
                </div>
                <div class="toast-body">Image Deleted Successfully</div>
              </div>
              <div
                class="toast"
                style="
                  background-color: hsl(112deg 100% 50% / 20%);
                  border: 5px solid rgb(0 255 0 / 25%);
                "
                id="imageUpdated"
                role="alert"
                aria-live="assertive"
                aria-atomic="true"
              >
                <div class="toast-header">
                  <strong class="mr-auto" style="color: green"
                    ><i class="fas fa-check"></i>&nbsp;Moved</strong
                  >
                </div>
                <div class="toast-body">Image text updated Successfully</div>
              </div>
            </div>
          </div>
        </div>
