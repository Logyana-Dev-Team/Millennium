    <script>
      function deleteImage(imageId) {
        $.ajax({
          url: "/deleteGalleryImage",
          method: "post",
          dataType: "json",
          data: { imageId: imageId },
          success: function (response) {
            window.setTimeout(function () {
              location.reload();
            }, 1500);
            $("#imageDeleted").toast("show");
          },
          error: function (response) {
            alert("server error occured");
          },
        });
      }
    </script>
